{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES2015",
    "target": "ES2017",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
